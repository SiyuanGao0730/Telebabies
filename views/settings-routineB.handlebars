        </div>

<script>

    mobiscroll.settings = {
        lang: 'en',            // Specify language like: lang: 'pl' or omit setting to use default
        theme: 'ios-dark'      // Specify theme like: theme: 'ios' or omit setting to use default
    };
    
    
    
    mobiscroll.date('#demo-header', {
        theme: 'ios-dark',     // Specify theme like: theme: 'ios' or omit setting to use default
        lang: 'en',            // Specify language like: lang: 'pl' or omit setting to use default
